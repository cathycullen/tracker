<h1>Listing participants</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Gender</th>
      <th>Dob</th>
      <th>Enrollment date</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Method of contact</th>
      <th>Remarks</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @participants.each do |participant| %>
      <tr>
        <td><%= participant.name %></td>
        <td><%= participant.gender %></td>
        <td><%= participant.dob %></td>
        <td><%= participant.enrollment_date %></td>
        <td><%= participant.phone %></td>
        <td><%= participant.email %></td>
        <td><%= participant.method_of_contact %></td>
        <td><%= participant.remarks %></td>
        <td><%= link_to 'Show', participant %></td>
        <td><%= link_to 'Edit', edit_participant_path(participant) %></td>
        <td><%= link_to 'Destroy', participant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<p id="notice"><%= notice %></p>
<p>
  <h4>Registry Name:
  <%= @registry_coordinator.registry.name %></h4>
</p>
<div class="panel panel-default">
  <div class="panel-heading">
    <p>
      <strong>Location:</strong>
      <%= @registry.location %>
    </p>
    <p>
      <strong>State:</strong>
      <%= @registry.state %>
    </p>
    <div class="panel-title">
      <p><strong>Participants Enrolled in This Registry</strong></p>
    </div>
  </div>
  <table class="table table-striped table-bordered table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Gender</th>
      <th>Dob</th>
      <th>Enrollment Date</th>
      <th>Coordinator</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Method of contact</th>
      <th>Remarks</th>
    </tr>
  </thead>
  <tbody>
      <% @registry.enrollments.each do |enrollment| %>
      <tr>
        <td><%= enrollment.participant.name %></td>
        <td><%= enrollment.participant.gender %></td>
        <td><%= enrollment.participant.dob %></td>
        <td><%= enrollment.enrollment_date %></td>
        <td><%= enrollment.coordinator.name %></td>
        <td><%= enrollment.participant.phone %></td>
        <td><%= enrollment.participant.email %></td>
        <td><%= enrollment.method_of_contact %></td>
        <td><%= enrollment.remarks %></td>

        <td>
          <%= link_to edit_enrollment_path(enrollment), class: "btn btn-default btn-sm" do %>
            <span class="glyphicon  glyphicon-pencil"></span>
          <% end %>
          <%= link_to 'Delete', enrollment, method: :delete, data: { confirm: 'Are you sure?' },  class: "btn btn-default  btn-sm" %>

          <%= link_to new_enrollment_path, class: 'btn btn-success btn-sm' do %>
              <i class="glyphicon glyphicon-plus"></i>Add
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
</div>


<%= link_to 'Edit', edit_registry_coordinator_path(@registry_coordinator) %> |
<%= link_to 'Back', registry_coordinators_path %>

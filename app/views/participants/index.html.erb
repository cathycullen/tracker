
<div class="panel panel-default">
  <div class="panel-heading">
    <div class="panel-title">
      <h4>All Participants</h4>
    </div>
  </div>
  <table class="table table-striped table-bordered table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Gender</th>
      <th>Dob</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Coordinator</th>
    </tr>
  </thead>
  <tbody>
      <% @participants.each do |participant| %>
      <tr>
        <td><%= participant.name %></td>
        <td><%= participant.gender %></td>
        <td><%= participant.dob %></td>
        <td><%= participant.phone %></td>
        <td><%= participant.email %></td>
        <td><%= participant.coordinator.name %></td>
        <td>
          <%= link_to edit_participant_path(participant), class: "btn btn-default btn-sm" do %>
            <span class="glyphicon  glyphicon-pencil"></span>
          <% end %>
          <%= link_to 'Delete', participant, method: :delete, data: { confirm: 'Are you sure?' },  class: "btn btn-default  btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
</div>

<%= link_to new_participant_path, class: 'btn btn-success' do %>
    <i class="glyphicon glyphicon-plus"></i> New Participant
<% end %>

<br>
<div class="panel panel-default">
  <div class="panel-heading">
    <div class="panel-title">
      <h4>Participants Grouped By Year of Birth</h4>
    </div>
  </div>
  <table class="table table-striped table-bordered table-striped table-hover">
    <thead>
      <tr>
        <th>Year</th>
        <th>Count</th>
      </tr>
    </thead>
    <tbody>
      <% Participant.dob_by_year.each do |year, count| %>
        <tr>
          <td><%= year %></td>
          <td><%= count %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <div class="panel-title">
      <h4>Participants by Coordinator and Gender</h4>
    </div>
  </div>
  <table class="table table-striped table-bordered table-striped table-hover">
    <thead>
      <tr>
        <th>Coordinator</th>
        <th>Gender</th>
        <th>Count</th>
      </tr>
    </thead>
    <tbody>
      <% Participant.query_by_coordinator_and_gender.each do |element| %>
        <tr>
          <td><%= element[0] %></td>
          <td><%= element[1] %></td>
          <td><%= element[2] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
